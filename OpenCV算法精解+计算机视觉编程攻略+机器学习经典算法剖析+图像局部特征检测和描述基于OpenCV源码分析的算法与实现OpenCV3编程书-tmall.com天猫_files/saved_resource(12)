KISSY.add("malldetail/other/bannerNav",function(e,t,a,n,o,i){function r(){e.use("ajax,dom,event,cookie",function(e,t,a,n,o){t({"url":"//detailskip."+(g_config.isDaily?"daily.taobao.net":"taobao.com")+"/json/dyn_combo.do?databiz=buycount","dataType":"jsonp","data":{},"success":function(e){var t=e.data.newUserGuide.picUrl,i=a.get("#detail");if(t&&i){var r=o.get("bannerNavCookie")||"",l=a.get(".country-text").innerHTML;if(r&&r.indexOf(l)>=0)return;o.set("bannerNavCookie",r+l,1);var c="<div id='J_bannerNav'><div class='bannerNav' ><div class='imgwarp'><img src='"+t+"' width='990' height='60' /><a href='#' class='closeBanner'>&#xe622;</a></div></div></div>";a.prepend(a.create(c),i),n.on(".bannerNav .closeBanner","click",function(e){e.preventDefault(),a.remove("#J_bannerNav")})}}})})}return{"init":r}},{"requires":["event","dom","ua"]});